<Window x:Class="Lab_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid Width="330" HorizontalAlignment="Left">
            <ToolBar VerticalAlignment="Top" HorizontalAlignment="Left" Height="25" Width="60">
                <Menu>
                    <MenuItem Header="_File">
                        <MenuItem Header="_Open" Click="OpenClick"/>
                        <MenuItem Header="_Exit" Click="ExitClick"/>
                    </MenuItem>
                </Menu>
            </ToolBar>
            <TreeView x:Name="TreeView1" Height="374" VerticalAlignment="Top" Width="330" Margin="0,35,0,0"/>
            <StatusBar Height="20" VerticalAlignment="Bottom" Width="330">
                <TextBlock x:Name="TextBlock2" HorizontalAlignment="Left" Width="330"/>
            </StatusBar>
        </Grid>
        <Grid Width="470" HorizontalAlignment="Right">
            <ScrollViewer>
                <TextBlock x:Name="TextBlock1" TextWrapping="Wrap" TextAlignment="Left" Margin="20 5 0 5"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
